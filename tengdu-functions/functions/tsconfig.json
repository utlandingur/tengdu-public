{
  "compilerOptions": {
    "lib": ["ES2021"],
    "module": "ES2020",
    "moduleResolution": "node",
    "target": "ES2021",
    "outDir": "lib",
    "sourceMap": true,
    "typeRoots": ["node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "src": ["/src"]
    }
  },
  "include": ["src", "__tests__", "__data__"]
}
